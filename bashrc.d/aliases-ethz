# --- Cisco Secure Client (ETHZ VPN) Aliases ---
# Check if the Cisco Secure Client directory exists before defining aliases.
if [ -d "/opt/cisco/secureclient/" ]; then
    alias vpn-eth="/opt/cisco/secureclient/bin/vpn"
    alias vpn-eth-connect="vpn-eth connect sslvpn.ethz.ch/staff-net"
else
    # Optional: You can uncomment the line below if you want a message
    : # 'no-op' command to keep the else block valid if no message is needed
fi

# starthcatsegment
HOST=$(hostname | tr '[:upper:]' '[:lower:]')
case "$HOST" in
    # 1. Substring matches using a pattern with wildcards (*)
    "magnum"|*octopus*|*bmic*|*biwi*)
        # This single pattern matches if 'octopus', 'bmic', or 'biwi' is anywhere in the hostname
        alias starthcatsegment="conda activate hcatsegment && cd /scratch_net/magnum/mleccardi/Repos/HCATSegment/"
        ;; # End of case pattern 2

    # Fallback for all other hostnames
    *)
        ;; # End of default case
esac
unset $HOST
